@using ExamHuseyn.Areas.Manage.ViewModels
@model RegisterVm
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Majestic Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/manage/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/manage/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/manage/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/manage/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/manage/images/logo.svg" alt="logo">
                            </div>
                         
                            <form class="pt-3" method="post">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="form-group">
                                    <input asp-for="Name"  class="form-control form-control-lg"  placeholder="Name">
                                    <span asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Surname" class="form-control form-control-lg" placeholder="Surname">
                                    <span asp-validation-for="Surname"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Usernmae" class="form-control form-control-lg" placeholder="Usernmae">
                                    <span asp-validation-for="Usernmae"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Email">
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="ConfirmPassword">
                                    <span asp-validation-for="ConfirmPassword"></span>
                                </div>
                            
                             
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >Register</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a asp-action="login" asp-controller="account" class="text-primary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/manage/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/manage/js/off-canvas.js"></script>
    <script src="~/manage/js/hoverable-collapse.js"></script>
    <script src="~/manage/js/template.js"></script>
    <!-- endinject -->
</body>

</html>
